<h2>Sign in</h2>

<div class="row-fluid">
	<div class="span6">
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-horizontal well"}) do |f| %>
		
		<fieldset>
			<legend>Sign In</legend>
			<%= f.input :email %>
			<%= f.input :password %>
		  	<% if devise_mapping.rememberable? -%>
		    	<div><%= f.input :remember_me, as: :boolean %></div>
		  	<% end -%>
			<div><%= f.button :submit %></div>
		</fielset>
	<% end %>

	<%= render "devise/shared/links" %>
	</div>

<div class="span6">
	<h2> Signing in is easy as a pie</h2>
</div>
</div>
